<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:background">@color/colorButtonBackground</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="NormalTextTheme">
        <item name="android:textColor">@color/colorNormalText</item>
        <item name="android:textSize">@dimen/sizeNormalText</item>
        <item name="android:layout_marginLeft">@dimen/sizeLeftMargin</item>
        <item name="android:layout_marginRight">@dimen/sizeRightMargin</item>
        <item name="android:layout_marginTop">@dimen/sizeTopMargin</item>
    </style>

    <style name="NormalEditTextTheme">
        <item name="android:layout_height">40dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">numberDecimal|numberSigned</item>
    </style>

    <style name="ResultTheme">
        <item name="android:textColor">@color/colorResultText</item>
        <item name="android:textSize">@dimen/sizeLargeText</item>
        <item name="android:textAlignment">center</item>
        <item name="android:hint">@string/result_noinputyet</item>
    </style>

</resources>
