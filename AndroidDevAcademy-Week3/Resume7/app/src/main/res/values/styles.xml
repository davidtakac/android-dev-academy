<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderTextTheme">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="ProfilePictureTheme">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingStart">5dp</item>

    </style>

    <style name="ButtonTheme">
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/color_buttonBackground</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ContentTheme">
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

</resources>
